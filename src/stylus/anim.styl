// bounce vars
h = 30px
h2 = 3px
t = .2s
t2 = .25s

@keyframes bounce
	0%
		transform translateZ(h)
		opacity 0
	10%
		opacity 1 
	100%
		transform translateZ(0)
		opacity 1
	
@keyframes bounce2
	0%
		transform translateZ(0)
	50%
		transform translateZ(h2) 
	100%
		transform translateZ(0)
		
@keyframes shadow
	0%
		transform translate3d(h*2,h*2,-(h)) 
		opacity 0
	99%
		opacity .3 
	100%
		transform translate3d(0,0,0)
		opacity 0

@keyframes shadow2
	0%, 100%
		transform translate3d(0,0,0)
		opacity 0
	1%, 99%
		opacity .3
	50%
		transform translate3d(h2*2,h2*2,-(h2)) 
		opacity .2
	
.loaded header.ready span, .label.ready, #thumbs .images.ready > div, #form-contact.ready > *, .sent .thanks
	animation-name bounce, bounce2
	animation-duration t, t2
	animation-timing-function ease-out, ease-in-out
	animation-fill-mode forwards, forwards
	transform-style preserve-3d
	-ms-perspective perp
	perspective perp
	&:before
		animation-name shadow, shadow2
		animation-duration t, t2
		animation-timing-function ease-out, ease-in-out
		animation-fill-mode forwards, forwards

.label, .label:before, .thanks, .thanks:before
	animation-delay 0s, t
		
.loaded .label, #form-contact > *
	opacity 0
	perspective-origin 40vw
	&:before
		position absolute
		top 0
		left 0
		width 100% 
		height 100% 
		content " "
		background-color #000
		z-index -1
		display inline-block
		
#thumbs .images > div
	opacity 0		

#thumbs .images > div, #form-contact > *
	position relative
	
#outer-wrapper > div, .label, #thumbs .images, #form-contact, #form-contact > *
	transform-style preserve-3d
	-ms-perspective perp
	
#portfolio .content
	transform scaleY(0)
	transform-origin top
	
#portfolio .label.ready + .wrapper .content
	transform scaleY(1)
	
.images
	perspective 100px
	
.debug *, .debug *:before
	animation-play-state paused !important

#form-contact
	opacity 1
	-moz-perspective 100px
	-moz-perspective-origin top
	transform translateZ(0)
	transition all t*5 ease-out
	
.sent 
	transform-style preserve-3d
	-ms-perspective perp	
	#form-contact
		opacity 0
		transform translateZ(-(h)/2) 

header
	-ms-perspective-origin center 500% 