
#outer-wrapper > div
	position relative
	width 100%
	max-width 1200px
	margin 0 auto
	box-sizing border-box
	z-index 1
	.content, .label h1
		dkScheme()
	&:nth-child(odd)
		.content, .label h1
			ltScheme()
	&:nth-child(even) .content
		&:before, &:after
			position absolute
			height 100%
			width 1000px
			content " "
			background-color: dk
			top 0
			left -1000px
		&:after
			left 100%
	.label
		position absolute
		top -.2em
		margin: 0 0 0 p2
		z-index 1
	h1
		padding 0 .4em
		z-index 1
		position relative
	
.content
	position relative
	padding 3em 20px
	transition transform .6s ease-in-out
